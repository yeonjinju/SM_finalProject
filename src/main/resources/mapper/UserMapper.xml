<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smhrd.web.user.UserMapper">

    <select id="selectFarmsByUserPhone" parameterType="string" resultType="com.smhrd.web.user.FarmDetailDTO">
        SELECT 
            FARM_IDX AS farmIdx,
            FARM_NAME AS farmName,
            USER_PHONE AS userPhone,
            FARM_ADDR AS farmLocation
        FROM QC_FARM
        WHERE USER_PHONE = #{userPhone}
    </select>

</mapper>
